<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".ui.NewsDetailActivity">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">

            <ImageView
                android:id="@+id/imageNewDetail"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="4dp"
                android:layout_marginRight="8dp" />

            <TextView
                android:id="@+id/txtNewTitleDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/imageNewDetail"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="10dp"
                android:textColor="#000"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/txtNewSummaryDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtNewTitleDetail"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="7dp"
                android:textSize="18sp" />


        </RelativeLayout>

    </RelativeLayout>
</ScrollView>